<div id="character-screen" class="hide">
	<%=image_tag("logos/character_screen_logo.png", :class => "logo") %>
	<div id="difficulty" class="center">
		<button id="easy" data-max-characters="2" class="active">Easy</button>
		<button id="medium" data-max-characters="3">Medium</button>
		<button id="hard" data-max-characters="4">Hard</button>
	</div>
	<%= form_tag(create_game_path, method: 'post', id: 'create-game') do %>
	  <% @characters.each_slice(4) do |slice| %>
		  <div class="row">
			<% slice.each do |character| %>
			  <%= render partial: 'components/flipcard', locals: { object: character } %>
			<% end %>
		  </div>
		<% end %>
	  <button type="submit">Start Game</button>
	<% end %>
	<%= render 'components/charactermodal' %>
</div>
